<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_backtranslation"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.sinmingu.brailleproject.backtranslationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F15F5F"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="역번역"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shapeserch"
        android:paddingLeft="10dp"
        android:orientation="horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:id="@+id/translation_edit"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:hint="번역하고 싶은 문자를 입력하세요."/>

        <ImageButton
            android:layout_width="38dp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/serchpicture"
            android:layout_height="28dp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F3F3F3"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="번역 결과"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="30dp"
                android:id="@+id/serchpicture1"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="번역할 언어  :  "
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/translation_text"
                android:textColor="#FF0000"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/serchpicture2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="번역된 점자  "
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="15dp"
            android:layout_weight="10">

            <ScrollView
                android:background="@drawable/shapebraille"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            </ScrollView>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
